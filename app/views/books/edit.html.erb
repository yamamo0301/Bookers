<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), class: "edit_book", id: "edit_book_#{@book.id}", method: :patch do |f| %>
  <div id="error_explanation">
    <% if @book.errors.any? %>
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "book_title" %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body, class: "book_body" %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "show", book_path(@book.id), class: "show_#{@book.id}" %>
